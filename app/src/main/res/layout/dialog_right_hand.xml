<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000ff">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialog_right_hand_layout_right_hand"
        android:layout_width="282dp"
        android:layout_height="375dp"
        android:background="@drawable/rh_icon_big"
        android:alpha="2"
        android:orientation="horizontal"
        android:visibility="visible">

    <LinearLayout
        android:layout_width="62dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="11dp">

        <ImageView
            android:id="@+id/dialog_right_hand_image_right_thumb"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="150dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp">

        <ImageView
            android:id="@+id/dialog_right_hand_image_right_index"
            android:layout_width="40dp"
            android:layout_height="160dp"
            android:layout_marginTop="23dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp">

        <ImageView
            android:id="@+id/dialog_right_hand_image_right_middle"
            android:layout_width="40dp"
            android:layout_height="180dp"
            android:layout_marginTop="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp">

        <ImageView
            android:id="@+id/dialog_right_hand_image_right_ring"
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp">

        <ImageView
            android:id="@+id/dialog_right_hand_image_right_little"
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_marginTop="70dp" />
    </LinearLayout>-
</LinearLayout>
</RelativeLayout>




